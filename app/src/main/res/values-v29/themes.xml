<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindMyPhone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0C90F1</item>
        <item name="colorPrimaryVariant">#0C90F1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0C90F1</item>
        <item name="colorSecondaryVariant">#0C90F1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:statusBarColor">#F0F0F0</item>

        <item name="colorAccent">#CC0033</item>

        <item name="android:textColorPrimary">#363A43</item>
        <item name="android:textColorSecondary">#7A8089</item>
    </style>

    <style name="Theme.FindMyPhone.Fullscreen">

        <!-- Secondary brand color. -->
        <item name="android:statusBarColor">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>